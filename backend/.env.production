# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Security - IMPORTANT: Generate a strong secret!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

# Data Management
DATA_EXPIRY_DAYS=14

# AI Scraping Configuration
# Options: perplexity (web search), openai (GPT-4/GPT-3.5)
AI_SCRAPER=perplexity
USE_AI_SCRAPER=true

# Perplexity API (for web-grounded responses)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# OpenAI API (fallback)
OPENAI_API_KEY=your-openai-api-key-here

# CORS Configuration (optional - set your domain)
# CORS_ORIGIN=https://yourdomain.com
